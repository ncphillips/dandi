<div class="page-block">
  <h1 class="heading xxl">Campaigns</h1>
</div>
<%= turbo_frame_tag "campaigns" do %>
  <div class="page-block stack vertical gap-4">
    <% if @campaigns.empty? %>
      <p>You aren't in any campaigns yet.</p>
    <% else %>
      <%= render @campaigns %>
    <% end %>
  </div>
<% end %>
